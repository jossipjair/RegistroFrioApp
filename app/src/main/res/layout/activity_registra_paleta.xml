<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    tools:context=".vista.RegistraPaleta">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     INGRESO DE PALETA A TÚNEL"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAzul"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/lblUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UBICACIÓN"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@color/colorNegro"
        android:layout_below="@+id/titulo"
        android:textColor="@color/colorBlanco"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/txtUbicacionFrio"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblUbicacion"
        android:layout_marginStart="0dp"
        android:enabled="false"
        android:hint="Ubicación Túnel "
        android:inputType="textCapCharacters"
        android:maxLength="5"
        android:textAlignment="center"
        android:textColor="@color/colorNegro"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPaleta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNegro"
        android:text="LECTURA PALETA"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtUbicacionFrio"
        android:textColor="@color/colorBlanco"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/txtNumPaleta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPaleta"
        android:enabled="false"
        android:hint="Número Paleta"
        android:inputType="textCapCharacters"
        android:maxLength="50"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:background="@color/colorNegro"
        android:text="N° PALETA                              FECHA Y HORA"
        android:textAlignment="center"
        android:textColor="@color/colorBlanco" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:text="Cantidad Paletas:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblCantidadPaleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textStyle="bold" />


    <GridView
        android:id="@+id/dgvPaletasFrio"
        android:layout_width="401dp"
        android:layout_height="384dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="100dp"
        android:numColumns="2" />

    <Button
        android:id="@+id/btnIniciarEnfriado"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAzul"
        android:text="Iniciar Enfriamiento"
        android:textColor="@color/colorBlanco" />

    <Button
        android:id="@+id/btnBuscaUbicacion"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lblUbicacion"
        android:layout_marginEnd="1dp"
        android:text="..." />

    <Button
        android:id="@+id/btnBuscaPaleta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblPaleta"
        android:background="@color/colorVerde"
        android:text="LEER PALETA "
        android:textColor="@color/colorBlanco"
        android:textStyle="bold" />

</RelativeLayout>